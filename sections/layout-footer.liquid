<div class="custom-footer border-t border-gray-200/20 pt-12 pb-24">
  <div class="container grid grid-cols-2 lg:grid-cols-4 gap-x-4 gap-y-8">
    <!-- Company Info -->
    <div>
      <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
        {{ section.settings.company_name | downcase }}
      </div>
      <div class="space-y-2 text-sm text-white" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
        <p>{{ section.settings.company_description | downcase }}</p>
        {% if section.settings.show_email %}
          <p>
            <a href="mailto:{{ section.settings.email }}" class="hover:opacity-75 transition duration-150">
              {{ section.settings.email | downcase }}
            </a>
          </p>
        {% endif %}
      </div>
    </div>

    {% if section.settings.links_1 != blank %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ linklists[section.settings.links_1].title | downcase }}
        </div>
        <div class="space-y-2 text-sm">
          {% for link in linklists[section.settings.links_1].links %}
            <div>
              <a href="{{ link.url }}" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
                {{ link.title | downcase }}
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if section.settings.links_2 != blank %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ linklists[section.settings.links_2].title | downcase }}
        </div>
        <div class="space-y-2 text-sm">
          {% for link in linklists[section.settings.links_2].links %}
            <div>
              <a href="{{ link.url }}" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
                {{ link.title | downcase }}
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if
      section.settings.social_instagram_visible or
      section.settings.social_twitter_visible or
      section.settings.social_facebook_visible or
      section.settings.social_youtube_visible
    %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ 'footer.social' | t | downcase }}
        </div>

        {% render 'layout-social',
          social_instagram_visible: section.settings.social_instagram_visible
          social_instagram_link: section.settings.social_instagram_link
          social_twitter_visible: section.settings.social_twitter_visible
          social_twitter_link: section.settings.social_twitter_link
          social_facebook_visible: section.settings.social_facebook_visible
          social_facebook_link: section.settings.social_facebook_link
          social_youtube_visible: section.settings.social_youtube_visible
          social_youtube_link: section.settings.social_youtube_link
        %}
      </div>
    {% endif %}

    {% assign enabled_locales = shop.enabled_locales | size %}
    {% assign enabled_currencies = shop.enabled_currencies | size %}

    {% if enabled_locales > 1 or enabled_currencies > 1 %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ 'footer.settings' | t | downcase }}
        </div>

        <div class="flex space-x-2">
          {% if enabled_locales > 1 %}
            {% render 'layout-select-locale' %}
          {% endif %}

          {% if enabled_currencies > 1 %}
            {% render 'layout-select-currency' %}
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if shop.enabled_payment_types != blank %}
      <div class="col-span-2">
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ 'footer.payment_methods' | t | downcase }}
        </div>

        <div class="flex flex-wrap space-x-2">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'w-12 h-auto mb-2' }}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<div class="border-t border-gray-200/20 py-8">
  <div class="container text-sm text-white font-medium text-center" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
    &copy; {{ 'now' | date: "%Y" }} {{ shop.name | downcase }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "header",
      "content": "Company Information"
    },
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Aeris Studio"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "Premium mechanical keyboards designed for enthusiasts."
    },
    {
      "type": "checkbox",
      "id": "show_email",
      "label": "Show Email Address",
      "default": true
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "hello@aeris.studio"
    },
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "link_list",
      "id": "links_1",
      "label": "Footer Links 1"
    },
    {
      "type": "link_list",
      "id": "links_2",
      "label": "Footer Links 2"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "social_instagram_visible",
      "label": "Show Instagram",
      "default": false
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "checkbox",
      "id": "social_twitter_visible",
      "label": "Show Twitter",
      "default": false
    },
    {
      "type": "url",
      "id": "social_twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "checkbox",
      "id": "social_facebook_visible",
      "label": "Show Facebook",
      "default": false
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "checkbox",
      "id": "social_youtube_visible",
      "label": "Show YouTube",
      "default": false
    },
    {
      "type": "url",
      "id": "social_youtube_link",
      "label": "YouTube URL"
    }
  ]
}
{% endschema %}