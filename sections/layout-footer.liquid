{%- liquid
  assign link_classes = 'text-white hover:opacity-75 transition duration-150'
  assign external_icon = '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>'
-%}

<div class="custom-footer bg-[#1e2329] text-white pt-12 pb-8">
  <div class="container">
    <!-- Top Section -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 pb-8">
      <!-- Main Heading -->
      <div class="md:col-span-1">
        <h2 class="text-xl font-semibold mb-4">{{ section.settings.main_heading }}</h2>
        {% if section.settings.main_links != blank %}
          <div class="space-y-2 text-sm">
            {% for link in linklists[section.settings.main_links].links %}
              <div>
                <a href="{{ link.url }}" class="{{ link_classes }}">
                  {{ link.title }}
                  {% if link.url contains 'http' %}{{ external_icon }}{% endif %}
                </a>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>

    <!-- Products -->
    <div>
      <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
        {{ 'Products' | downcase }}
      </div>
      <div class="space-y-2 text-sm">
        <div>
          <a href="/products/killer65" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
            {{ 'Killer65' | downcase }}
          </a>
        </div>
        <div>
          <a href="/collections/all" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
            {{ 'All Products' | downcase }}
          </a>
        </div>
        {% if section.settings.show_customization_link %}
          <div>
            <a href="/pages/customization" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
              {{ 'Customization' | downcase }}
            </a>
          </div>
        {% endif %}
      </div>
    {% endif %}

    <!-- Support -->
    <div>
      <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
        {{ 'Support' | downcase }}
      </div>
      <div class="space-y-2 text-sm">
        <div>
          <a href="/pages/support" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
            {{ 'Support' | downcase }}
          </a>
        </div>
        {% if section.settings.show_about_link %}
          <div>
            <a href="/pages/about" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
              {{ 'About Us' | downcase }}
            </a>
          </div>
        {% endif %}
        {% if section.settings.discord_link %}
          <div>
            <a href="{{ section.settings.discord_link }}" target="_blank" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
              {{ 'Discord Community' | downcase }}
            </a>
          </div>
        {% endif %}
        {% if section.settings.blog_link %}
          <div>
            <a href="{{ section.settings.blog_link }}" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
              {{ 'Blog & Updates' | downcase }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>

    {% if
      section.settings.social_instagram_visible or
      section.settings.social_twitter_visible or
      section.settings.social_facebook_visible or
      section.settings.social_youtube_visible
    %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ 'footer.social' | t | downcase }}
        </div>

        {% render 'layout-social',
          social_discord_link: settings.social_discord_link,
          social_instagram_link: settings.social_instagram_link,
          social_youtube_link: settings.social_youtube_link,
          social_tiktok_link: settings.social_tiktok_link
        %}
      </div>
    {% endif %}

    {% assign enabled_locales = shop.enabled_locales | size %}
    {% assign enabled_currencies = shop.enabled_currencies | size %}

    {% if enabled_locales > 1 or enabled_currencies > 1 %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ 'footer.settings' | t | downcase }}
        </div>

        <div class="flex space-x-2">
          {% if enabled_locales > 1 %}
            {% render 'layout-select-locale' %}
          {% endif %}

          {% if enabled_currencies > 1 %}
            {% render 'layout-select-currency' %}
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if shop.enabled_payment_types != blank %}
      <div class="col-span-2">
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ 'footer.payment_methods' | t | downcase }}
        </div>

        <div class="flex flex-wrap space-x-2">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'w-12 h-auto mb-2' }}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<div class="border-t border-gray-200/20 py-8">
  <div class="container text-sm text-white font-medium text-center" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
    &copy; {{ 'now' | date: "%Y" }} {{ shop.name | downcase }}
  </div>
</div>

