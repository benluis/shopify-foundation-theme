<!-- Apple-style features section -->
<section id="features" class="py-16 sm:py-24 lg:py-32 bg-gray-50">
  <div class="container">
    {% if section.settings.headline %}
      <div class="text-center mb-12 sm:mb-16 lg:mb-20">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-thin text-gray-900 mb-4 tracking-tight">
          {{ section.settings.headline | downcase }}
        </h2>
        <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
          {{ section.settings.subheading | downcase }}
        </p>
      </div>
    {% endif %}

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-12 lg:gap-16">
      {% for block in section.blocks %}
        <div class="text-center group">
          <!-- Feature icon/visual placeholder -->
          <div class="w-16 h-16 sm:w-20 sm:h-20 mx-auto mb-6 sm:mb-8 bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl flex items-center justify-center group-hover:scale-105 transition-transform duration-300">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="{{ block.settings.icon.alt | escape }}" class="w-8 h-8 sm:w-10 sm:h-10 object-contain">
            {% else %}
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-600 rounded-lg"></div>
            {% endif %}
          </div>
          
          <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-gray-900 mb-3 sm:mb-4">
            {{ block.settings.title | downcase }}
          </h3>
          
          <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
            {{ block.settings.text | downcase }}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature cards (Osume)",
  "class": "shopify-section-vue",
  "settings": [
    { "type": "text", "id": "headline", "label": "Headline", "default": "Featuring" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Every detail engineered for the perfect typing experience" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Icon" },
        { "type": "text", "id": "title", "label": "Title", "default": "CNC'd Aluminum Body" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Solid construction with precise machining for a premium feel." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature cards (Osume)",
      "category": "Text",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}



