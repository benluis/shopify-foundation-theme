{% assign image = section.settings.image %}
{% assign video_url = section.settings.video_url %}
{% assign video_poster = section.settings.video_poster %}

<!-- Apple-style hero section -->
<div class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 z-0">
    {% if section.settings.background_type == 'video' and video_url != blank %}
      <video
        class="w-full h-full object-cover object-center"
        autoplay
        muted
        loop
        playsinline
        {% if video_poster != blank %}poster="{{ video_poster | image_url }}"{% endif %}
      >
        <source src="{{ video_url }}" type="video/mp4">
      </video>
    {% elsif section.settings.background_type == 'image' and image != blank %}
      <img src="{{ image | image_url: width: 3840 }}" alt="{{ image.alt | escape }}" class="w-full h-full object-cover object-center" loading="lazy">
    {% else %}
      <div class="w-full h-full bg-gray-900"></div>
    {% endif %}
  </div>

  <!-- Apple-style content overlay -->
  <div class="container relative z-10 text-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl sm:text-6xl lg:text-8xl font-thin text-white mb-4 sm:mb-6 lg:mb-8 tracking-tight" style="text-shadow: 0 2px 10px rgba(0,0,0,0.5);">
        {{ section.settings.headline | downcase }}
      </h1>
      
      <p class="text-xl sm:text-2xl lg:text-3xl text-white/90 mb-2 sm:mb-4 font-light" style="text-shadow: 0 1px 5px rgba(0,0,0,0.4);">
        {{ section.settings.text | downcase }}
      </p>
      
      {% if section.settings.price_text != blank %}
        <p class="text-lg sm:text-xl text-white/80 mb-8 sm:mb-12" style="text-shadow: 0 1px 5px rgba(0,0,0,0.4);">
          {{ section.settings.price_text | downcase }}
        </p>
      {% endif %}

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="{{ section.settings.button_url }}" 
          class="inline-flex items-center justify-center px-8 py-3 bg-black/50 text-white text-base font-medium rounded-full transition duration-200 min-w-[200px] backdrop-blur hover:bg-black/70 transform hover:scale-105 border border-white/20"
        >
          {{ section.settings.button_text | downcase }}
        </a>
        
        {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
          <a 
            href="{{ section.settings.button_2_url }}" 
            class="inline-flex items-center justify-center px-8 py-3 bg-white/20 text-white text-base font-medium rounded-full transition duration-200 min-w-[200px] backdrop-blur hover:bg-white/30 transform hover:scale-105 border border-white/20"
          >
            {{ section.settings.button_2_text | downcase }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce flex items-center justify-center">
    <svg class="w-6 h-6 text-white/60 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.hero.name",
  "class": "shopify-section-vue",
  "settings": [
    {
      "type": "select",
      "id": "background_type",
      "label": "Background Type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" }
      ],
      "default": "video"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:common.image"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "t:common.headline",
      "default": "Headline"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "t:common.text",
      "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Iste quos hic praesentium recusandae dolores odio animi deleniti officia cum itaque."
    },
    {
      "type": "text",
      "id": "price_text",
      "label": "Price Text",
      "default": "Starting at $149"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "t:common.button.url"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:common.button.text",
      "default": "Button"
    },
    {
      "type": "url",
      "id": "button_2_url",
      "label": "Button 2 URL"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button 2 Text",
      "default": "Learn More"
    }
  ],
  "presets": [
    {
      "name": "t:sections.hero.name",
      "category": "Image"
    }
  ]
}
{% endschema %}