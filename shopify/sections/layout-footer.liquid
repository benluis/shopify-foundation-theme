<div class="border-t border-gray-200 pt-12 pb-24">
  <div class="container grid grid-cols-2 lg:grid-cols-4 gap-x-4 gap-y-8">
    <!-- Company Info -->
    <div>
      <div class="text-lg font-bold mb-3">
        Aeris Studio
      </div>
      <div class="space-y-2 text-sm text-gray-600">
        <p>Premium mechanical keyboards designed for enthusiasts.</p>
        {% if section.settings.show_email %}
          <p>
            <a href="mailto:{{ section.settings.email }}" class="hover:text-black transition duration-150">
              {{ section.settings.email }}
            </a>
          </p>
        {% endif %}
      </div>
    </div>

    <!-- Products -->
    <div>
      <div class="text-lg font-bold mb-3">
        Products
      </div>
      <div class="space-y-2 text-sm">
        <div>
          <a href="/products/killer65" class="text-gray-600 hover:text-black transition duration-150">
            Killer65
          </a>
        </div>
        <div>
          <a href="/collections/all" class="text-gray-600 hover:text-black transition duration-150">
            All Products
          </a>
        </div>
        {% if section.settings.show_customization_link %}
          <div>
            <a href="/pages/customization" class="text-gray-600 hover:text-black transition duration-150">
              Customization
            </a>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Support -->
    <div>
      <div class="text-lg font-bold mb-3">
        Support
      </div>
      <div class="space-y-2 text-sm">
        <div>
          <a href="/pages/contact" class="text-gray-600 hover:text-black transition duration-150">
            Contact Us
          </a>
        </div>
        {% if section.settings.show_about_link %}
          <div>
            <a href="/pages/about" class="text-gray-600 hover:text-black transition duration-150">
              About Us
            </a>
          </div>
        {% endif %}
        {% if section.settings.discord_link %}
          <div>
            <a href="{{ section.settings.discord_link }}" target="_blank" class="text-gray-600 hover:text-black transition duration-150">
              Discord Community
            </a>
          </div>
        {% endif %}
        {% if section.settings.blog_link %}
          <div>
            <a href="{{ section.settings.blog_link }}" class="text-gray-600 hover:text-black transition duration-150">
              Blog & Updates
            </a>
          </div>
        {% endif %}
      </div>
    </div>

    {% if
      section.settings.social_instagram_visible or
      section.settings.social_twitter_visible or
      section.settings.social_facebook_visible or
      section.settings.social_youtube_visible
    %}
      <div>
        <div class="text-lg font-bold mb-3">
          {{ 'footer.social' | t }}
        </div>

        {% render 'layout-social',
          social_instagram_visible: section.settings.social_instagram_visible
          social_instagram_link: section.settings.social_instagram_link
          social_twitter_visible: section.settings.social_twitter_visible
          social_twitter_link: section.settings.social_twitter_link
          social_facebook_visible: section.settings.social_facebook_visible
          social_facebook_link: section.settings.social_facebook_link
          social_youtube_visible: section.settings.social_youtube_visible
          social_youtube_link: section.settings.social_youtube_link
        %}
      </div>
    {% endif %}

    {% assign enabled_locales = shop.enabled_locales | size %}
    {% assign enabled_currencies = shop.enabled_currencies | size %}

    {% if enabled_locales > 1 or enabled_currencies > 1 %}
      <div>
        <div class="text-lg font-bold mb-3">
          {{ 'footer.settings' | t }}
        </div>

        <div class="flex space-x-2">
          {% if enabled_locales > 1 %}
            {% render 'layout-select-locale' %}
          {% endif %}

          {% if enabled_currencies > 1 %}
            {% render 'layout-select-currency' %}
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if shop.enabled_payment_types != blank %}
      <div class="col-span-2">
        <div class="text-lg font-bold mb-3">
          {{ 'footer.payment_methods' | t }}
        </div>

        <div class="flex flex-wrap space-x-2">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'w-12 h-auto mb-2' }}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<div class="border-t border-gray-200 py-8">
  <div class="container text-sm text-gray-600 font-medium text-center">
    &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "header",
      "content": "Company Information"
    },
    {
      "type": "checkbox",
      "id": "show_email",
      "label": "Show Email Address",
      "default": true
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "hello@aeris.studio"
    },
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "checkbox",
      "id": "show_about_link",
      "label": "Show About Us Link",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_customization_link",
      "label": "Show Customization Link",
      "default": false
    },
    {
      "type": "url",
      "id": "discord_link",
      "label": "Discord Link"
    },
    {
      "type": "url",
      "id": "blog_link",
      "label": "Blog Link"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "social_instagram_visible",
      "label": "Show Instagram",
      "default": false
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "checkbox",
      "id": "social_twitter_visible",
      "label": "Show Twitter",
      "default": false
    },
    {
      "type": "url",
      "id": "social_twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "checkbox",
      "id": "social_facebook_visible",
      "label": "Show Facebook",
      "default": false
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "checkbox",
      "id": "social_youtube_visible",
      "label": "Show YouTube",
      "default": false
    },
    {
      "type": "url",
      "id": "social_youtube_link",
      "label": "YouTube URL"
    }
  ]
}
{% endschema %}