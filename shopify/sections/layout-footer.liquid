<div class="custom-footer border-t border-gray-200/20 pt-12 pb-24">
  <div class="container grid grid-cols-1 lg:grid-cols-4 gap-x-4 gap-y-8">
    
    <!-- Company Info -->
    <div>
      <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
        {{ section.settings.company_name | downcase }}
      </div>
      <div class="space-y-2 text-sm text-white" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
        <p>{{ section.settings.company_description }}</p>
      </div>
    </div>

    <!-- Company Links -->
    {% if section.settings.company_links != blank %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ linklists[section.settings.company_links].title | downcase }}
        </div>
        <div class="space-y-2 text-sm">
          {% for link in linklists[section.settings.company_links].links %}
            <div>
              <a href="{{ link.url }}" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
                {{ link.title | downcase }}
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Policies Links -->
    {% if section.settings.policies_links != blank %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ linklists[section.settings.policies_links].title | downcase }}
        </div>
        <div class="space-y-2 text-sm">
          {% for link in linklists[section.settings.policies_links].links %}
            <div>
              <a href="{{ link.url }}" class="text-white hover:opacity-75 transition duration-150" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
                {{ link.title | downcase }}
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Socials -->
    {% if section.settings.social_instagram_visible or section.settings.social_twitter_visible or section.settings.social_facebook_visible or section.settings.social_youtube_visible %}
      <div>
        <div class="text-lg font-bold mb-3 text-white" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
          {{ 'footer.social' | t | downcase }}
        </div>
        {% render 'layout-social',
          social_instagram_visible: section.settings.social_instagram_visible,
          social_instagram_link: section.settings.social_instagram_link,
          social_twitter_visible: section.settings.social_twitter_visible,
          social_twitter_link: section.settings.social_twitter_link,
          social_facebook_visible: section.settings.social_facebook_visible,
          social_facebook_link: section.settings.social_facebook_link,
          social_youtube_visible: section.settings.social_youtube_visible,
          social_youtube_link: section.settings.social_youtube_link
        %}
      </div>
    {% endif %}
  </div>

  <!-- Newsletter -->
  {% if section.settings.show_newsletter %}
    <div class="container mt-12">
      <div class="text-lg font-bold mb-3 text-white text-center" style="text-shadow: 0 1px 3px rgba(0,0,0,0.5);">
        {{ section.settings.newsletter_headline | downcase }}
      </div>
      <p class="text-sm text-white text-center mb-4" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
        {{ section.settings.newsletter_subheading }}
      </p>
      {% form 'customer', class: 'flex justify-center' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="flex">
          <input
            type="email"
            name="contact[email]"
            class="py-2 px-4 rounded-l-md border-r-0 focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Your email"
          >
          <button type="submit" class="py-2 px-6 bg-blue-600 text-white font-semibold rounded-r-md hover:bg-blue-700 transition duration-150">
            Subscribe
          </button>
        </div>
      {% endform %}
    </div>
  {% endif %}
</div>

<div class="border-t border-gray-200/20 py-8">
  <div class="container text-sm text-white font-medium text-center" style="text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
    &copy; {{ 'now' | date: "%Y" }} {{ shop.name | downcase }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "header",
      "content": "Company Information"
    },
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Aeris Studio"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "Premium mechanical keyboards designed for enthusiasts."
    },
    {
      "type": "link_list",
      "id": "company_links",
      "label": "Company Links"
    },
    {
      "type": "link_list",
      "id": "policies_links",
      "label": "Policies Links"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show Newsletter Signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_headline",
      "label": "Newsletter Headline",
      "default": "Stay Updated"
    },
    {
      "type": "text",
      "id": "newsletter_subheading",
      "label": "Newsletter Subheading",
      "default": "Subscribe to our newsletter for the latest news and offers."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "social_instagram_visible",
      "label": "Show Instagram",
      "default": false
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "checkbox",
      "id": "social_twitter_visible",
      "label": "Show Twitter",
      "default": false
    },
    {
      "type": "url",
      "id": "social_twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "checkbox",
      "id": "social_facebook_visible",
      "label": "Show Facebook",
      "default": false
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "checkbox",
      "id": "social_youtube_visible",
      "label": "Show YouTube",
      "default": false
    },
    {
      "type": "url",
      "id": "social_youtube_link",
      "label": "YouTube URL"
    }
  ]
}
{% endschema %}