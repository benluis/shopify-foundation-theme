  "settings": [
    {
      "type": "header",
      "content": "Footer Content"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Aeris Studio"
    },
    {
      "type": "link_list",
      "id": "main_links",
      "label": "Main Heading Links"
    },
    {
      "type": "link_list",
      "id": "links_1",
      "label": "Link Column 1"
    },
    {
      "type": "link_list",
      "id": "links_2",
      "label": "Link Column 2"
    },
    {
      "type": "text",
      "id": "reach_us_heading",
      "label": "Reach Us Heading",
      "default": "Reach us"
    },
    {
      "type": "link_list",
      "id": "links_3",
      "label": "Reach Us Links (Contact/Feedback)"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    { "type": "url", "id": "social_discord_link", "label": "Discord URL" },
    { "type": "url", "id": "social_instagram_link", "label": "Instagram URL" },
    { "type": "url", "id": "social_youtube_link", "label": "YouTube URL" },
    { "type": "url", "id": "social_tiktok_link", "label": "TikTok URL" },
    {
      "type": "header",
      "content": "Bottom Row"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Â© 2025 Aeris Studio LLP, last updated 10 October 2025"
    },
    {
      "type": "link_list",
      "id": "bottom_links",
      "label": "Bottom Links (e.g., Privacy Policy)"
    },
    {
      "type": "text",
      "id": "made_with_text",
      "label": "Made with Text",
      "default": "Made with"
    },
    {
      "type": "image_picker",
      "id": "made_with_image",
      "label": "Made with Image"
    },
    {
      "type": "url",
      "id": "made_with_url",
      "label": "Made with URL"
    },
    {
      "type": "text",
      "id": "built_by_text",
      "label": "Built by Text",
      "default": "Built by"
    },
    {
      "type": "image_picker",
      "id": "built_by_image",
      "label": "Built by Image"
    },
    {
      "type": "url",
      "id": "built_by_url",
      "label": "Built by URL"
    }
  ]
}
{% endschema %}